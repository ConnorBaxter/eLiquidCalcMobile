<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="42.5dp"
        android:id="@+id/editText1"
        android:inputType="none|number"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Base Nicotine Volume (ml)" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText1"
        android:id="@+id/editText2"
        android:inputType="none|number"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Base Nicotine Concentration (mg/ml)" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editText2"
        android:id="@+id/editText3"
        android:inputType="none|number"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Final Nicotine Concentration (mg/ml)" />
    <TextView
        android:text="    PG/VG Ratio"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar1"
        android:max="100"
        android:progress="50" />
    <EditText
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/seekBar1"
      android:id="@+id/editText4"
      android:inputType="none|number"
      android:foregroundGravity="center"
      android:gravity="center"
      android:hint="Flavorings added (ml)" />
    <TextView
        android:text="PG Volume:\nVG Volume:\nTotal Volume:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:gravity="center"
        android:layout_marginTop="40.0dp"
        android:layout_below="@+id/editText4"
        android:id="@+id/textView1" />
    <Button
        android:text="Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView1"
        android:id="@+id/button1"
        android:layout_marginBottom="0.0dp"
        android:layout_marginRight="0.0dp" />
    <Button
      android:text="Switch To Basic Mode"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/button1"
      android:id="@+id/button2"
      android:layout_marginBottom="0.0dp"
      android:layout_marginRight="0.0dp" />

</LinearLayout>
